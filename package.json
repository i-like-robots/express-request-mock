{
  "name": "express-request-mock",
  "version": "3.1.0",
  "description": "A convenient wrapper for node-mocks-http which makes testing Express controllers and middleware easy.",
  "keywords": [
    "mock",
    "stub",
    "test",
    "express"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "npm run verify && npm run spec",
    "spec": "node --test --test-reporter spec",
    "lint": "eslint .",
    "format": "prettier --write '**/*.{js,json,yml}'",
    "verify": "npm run lint && npm run format",
    "prepublishOnly": "npm run test"
  },
  "author": "Matt Hinchliffe",
  "repository": {
    "type": "git",
    "url": "git@github.com:i-like-robots/express-request-mock.git"
  },
  "homepage": "https://github.com/i-like-robots/express-request-mock",
  "license": "MIT",
  "dependencies": {
    "node-mocks-http": "^1.13.0"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
